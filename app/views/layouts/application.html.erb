<!DOCTYPE html>
<html>
  <head>
    <title>Budget</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <%if user_signed_in? %>
    <nav>
      <% if current_page?(root_path) || current_page?(controller: "clusters", action: "new") %>
      <div class="loggedin-form">
        <%= image_tag("https://img.icons8.com/ios-glyphs/30/FFFFFF/menu--v1.png") %>
        <h2>CATEGORIES</h2>
        <%= button_to "Sign Out", destroy_user_session_path, class: "signout", method: :delete %>
      </div>

      <% elsif current_page?(controller: "starts", action: "new")%>

      <div class="loggedin-form">
        <%= link_to '<', :back %>
        <h2>TRANSACTIONS</h2>
        <%= button_to "Sign Out", destroy_user_session_path, class: "signout", method: :delete %>
      </div>

      <% else %>
      <div class="loggedin-form">
        <%= link_to '<', new_cluster_path %>
        <h2>CATEGORIES</h2>
        <%= button_to "Sign Out", destroy_user_session_path, class: "signout", method: :delete %>
      </div>
      <% end %>
    </nav>
    <% end %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
